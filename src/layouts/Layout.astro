---
interface Props {
    title: string
}

const { title } = Astro.props

const myImage = 'bg-[url("/bg-hero-lead.png")] min-h-screen bg-no-repeat bg-cover'
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <div class={myImage}>
                <nav class="flex container mx-auto justify-between py-4 items-center z-10">
                    <div class="text-white font-bold text-2xl">
                        <img src="/logo-cb-top.png" alt="" />
                    </div>
                    <div class="">
                        <ul class="flex space-x-8 uppercase items-center">
                            <li class="text-white font-bold">Besucher</li>
                            <li class="text-white font-bold">Aussteller</li>
                            <li class="bg-orange-500 px-6 py-3 shadow-black rounded text-white font-bold">Zur Messe</li>
                            <li class="text-white font-bold">Stellen</li>
                            <li class="text-white font-bold">Speaker</li>
                            <li class="text-white font-bold">Agenda</li>
                        </ul>
                    </div>
                    <div class="text-white font-bold text-2xl">12 | 22 | 22 | 44</div>
                </nav>
                <div class="top-1/4 absolute"><img src="/HeaderContentLandingPage.png" alt="" /></div>
                <div><img class="w-full absolute bottom-0" src="/bg-tear.png" alt="" /></div>
            </div>
        </header>
        <slot />
    </body>
</html>
